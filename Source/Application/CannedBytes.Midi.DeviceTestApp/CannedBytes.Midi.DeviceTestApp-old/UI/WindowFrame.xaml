<Window x:Class="CannedBytes.Midi.DeviceTestApp.UI.WindowFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowFrame" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <ContentPresenter Grid.ColumnSpan="2" Name="ContentPlaceholder" />

        <Button Content="OK" Grid.Row="1" Click="Button_Click" />
        <Button Content="Cancel" Grid.Row="1" Grid.Column="1" IsCancel="True"  />
    </Grid>
</Window>