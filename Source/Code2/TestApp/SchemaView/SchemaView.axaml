<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:sv="clr-namespace:TestApp.SchemaView"
             x:Class="TestApp.SchemaView.SchemaView"
             x:DataType="sv:SchemaViewModel">

  <Design.DataContext>
    <sv:SchemaViewModel />
  </Design.DataContext>
  
  <Grid RowDefinitions="Auto, Auto, *">
    <TextBlock Text="Device Schemas:"
        Grid.Row="0" Padding="8, 8, 8, 8" />
    <ComboBox ItemsSource="{Binding SchemaNames}"
        MinWidth="450" MaxWidth="450" Padding="8, 8, 8, 8"
        SelectedItem="{Binding SelectedDeviceSchema, Mode=TwoWay}"
        Grid.Row="1" />
    
    <TreeDataGrid Source="{Binding Roots}" Padding="8, 8, 8, 8"
        Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Visible" />
  </Grid>
</UserControl>
