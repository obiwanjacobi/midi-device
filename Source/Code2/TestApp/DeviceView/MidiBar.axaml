<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:dv="clr-namespace:TestApp.DeviceView"
             x:Class="TestApp.DeviceView.MidiBar"
             x:DataType="dv:MidiViewModel">

  <Design.DataContext>
    <dv:DeviceViewModel />
  </Design.DataContext>

  
  <TextBlock Text="Midi In:" />
  <ComboBox ItemsSource="{Binding MidiInPorts}" />

  <TextBlock Text="Midi Out:" />
  <ComboBox ItemsSource="{Binding MidiOutPorts}" />

  <Button Content="Start/Stop" Command="{Binding StartStopCommand}" />
  
</UserControl>
